<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" />

        <!--IdVault Services-->
        <service id="Conduction\IdVaultBundle\Service\IdVaultService" />

        <!--IdVault Security: User Providers-->
        <service id="Conduction\IdVaultBundle\Security\User\IdVaultProvider" />

        <!--IdVault Security: Authenticators-->
        <service id="Conduction\IdVaultBundle\Security\IdVaultAuthenticator" />

    </services>
</container>
